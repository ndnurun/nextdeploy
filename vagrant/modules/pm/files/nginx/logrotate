/var/log/nginx/nginx-access* {
  daily
  missingok
  rotate 365
  su gitlab-www adm
  compress
  copytruncate
  notifempty
  postrotate
  endscript
}

/var/log/nginx/nginx-api* {
  weekly
  missingok
  rotate 26
  su gitlab-www adm
  compress
  copytruncate
  notifempty
  postrotate
  endscript
}

