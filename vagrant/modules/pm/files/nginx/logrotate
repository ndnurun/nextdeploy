/var/log/nginx-access* {
  daily
  missingok
  rotate 365
  compress
  copytruncate
  notifempty
  postrotate
  endscript
}

/var/log/nginx-api* {
  weekly
  missingok
  rotate 26
  compress
  copytruncate
  notifempty
  postrotate
  endscript
}

/var/log/nginx-ui* {
  weekly
  missingok
  rotate 26
  compress
  copytruncate
  notifempty
  postrotate
  endscript
}

/var/log/nginx-error* {
  weekly
  missingok
  rotate 10
  compress
  copytruncate
  notifempty
  postrotate
  endscript
}